<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:cardCornerRadius="20sp">

        <ImageView
            android:id="@+id/popular_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza_sample"/>
        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:src="@drawable/image_btm_overlay"/>
        <TextView
            android:id="@+id/popular_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/poppins"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="22dp"
            android:text="here is the sample text"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/popular_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppins"
            android:maxLength="7"
            android:paddingStart="15dp"
            android:text="20min"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/popular_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppins"
            android:maxLength="7"
            android:paddingStart="15dp"
            android:text="âŒš"
            android:textColor="@color/white"
            android:textSize="11sp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>